<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ac.srikar.tablayout.PagerContainer
        android:id="@+id/view_pager_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="@dimen/top_pager_slider_width"
            android:layout_height="@dimen/top_pager_slider_height"
            android:layout_marginLeft="@dimen/recharge_view_pager_margin"
            android:layout_marginStart="@dimen/recharge_view_pager_margin" />
    </ac.srikar.tablayout.PagerContainer>
</RelativeLayout>