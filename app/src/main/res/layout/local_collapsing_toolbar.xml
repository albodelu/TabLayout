<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/collapsing_toolbar"
    android:layout_width="match_parent"
    android:layout_height="208dp"
    android:background="@color/local_collapsing_toolbar"
    app:contentScrim="?attr/colorPrimary"
    app:expandedTitleMarginBottom="20dp"
    app:expandedTitleMarginEnd="64dp"
    app:expandedTitleMarginStart="48dp"
    app:layout_scrollFlags="scroll|exitUntilCollapsed">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/select_location_button"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/local_app_bar_color"
            android:elevation="16dp"
            android:gravity="center"
            android:text="@string/select_location_local"
            android:textColor="@color/defaultButtonColor"
            android:textSize="@dimen/local_select_location_text_size" />

        <include
            android:id="@+id/view_pager_inside_container"
            layout="@layout/view_pager_inside_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/viewpager_padding"
            android:layout_marginTop="@dimen/viewpager_padding"/>
    </LinearLayout>

</android.support.design.widget.CollapsingToolbarLayout>